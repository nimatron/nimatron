nimFile ::= IND_EQ* (stmt ((';'|IND_EQ) stmt)*)? ';'? IND_EQ*

// Statements
stmt ::= ifStmt
       | exprStmt
       | varStmt
exprStmt ::= expr (('=' <<optInd (expr colonBody?)>>) | (expr (',' expr)* ))? {pin=1}
ifStmt ::= 'if' expr ':' <<optInd stmt>>
   (IND_EQ 'elif' expr ':' <<optInd stmt>>)*
   (IND_EQ 'else' ':' <<optInd stmt>>)? {pin=1}
varStmt ::= (('let'|'var'|'using') <<section variable>>) {pin=1}

// Variable declaration
variable ::= identColonEquals colonBody? {pin=1}
private identColonEquals ::= IDENT (',' IDENT)* ','? ('=' <<optInd expr>>)? {pin=1}
private colonBody ::= ':' stmt {pin=1}

// Expression
expr ::= primary (OP10 <<optInd primary>>)* {pin=1}
private primary ::= prefixOperator? identOrLiteral primarySuffix* {pin=2}
prefixOperator ::= OP8
private identOrLiteral ::= IDENT|literal
private primarySuffix ::= ('(' <<optInd ((exprColonEqExpr ','?)*)>> ')')
                             | <<optInd exprList>> // command syntax
private exprColonEqExpr ::= expr (':'|'=' expr)? {pin=1}
exprList ::= expr (',' expr)* {pin=1}

// Literal
literal ::= INT_LIT
          | INT8_LIT
          | INT16_LIT
          | INT32_LIT
          | INT64_LIT
          | UINT_LIT
          | UINT8_LIT
          | UINT16_LIT
          | UINT32_LIT
          | UINT64_LIT
          | FLOAT_LIT
          | FLOAT32_LIT
          | FLOAT64_LIT
          | BOOL_LIT
          | STR_LIT
          | RSTR_LIT
          | TRIPLESTR_LIT
          | CHAR_LIT
          | NIL

// meta rules
private termInd ::= IND_LT | <<eof>>
private meta optInd ::= <<RULE>> | (IND_GT <<RULE>> termInd)
private meta section ::= <<RULE>> | (IND_GT <<RULE>>? (IND_EQ <<RULE>>?)* IND_LT)

