private continueStmt ::= 'break' <<optInd expr>>?
private condStmt ::= expr ':' stmt (IND_EQ 'elif' expr ':' stmt)* (IND_EQ 'else' ':' stmt)?
private ifStmt ::= 'if' condStmt
private whenStmt ::= 'when' condStmt
private whileStmt ::= 'while' expr ':' stmt
